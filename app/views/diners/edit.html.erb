<!-- Validation failure messages -->
<% if @diner.errors.any? %>
  <% @diner.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Diner #<%= @diner.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_diner/<%= @diner.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for party_id -->
      <div class="form-group">
        <label for="party_id" class="control-label">
          Party
        </label>

        <input type="text" id="party_id" name="party_id" placeholder="Party" class="form-control" value="<%= @diner.party_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @diner.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Diner
      </button>
      or
      <a href="/diners/<%= @diner.id %>">Cancel</a>
    </form>
  </div>
</div>
