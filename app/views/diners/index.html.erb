<div class="page-header">
  <h1>
    Diners
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Avatar</th>
        <th>Party</th>
        <th>Actions</th>
      </tr>

      <% @diners.each do |diner| %>
      <tr>
        <td><%= diner.user.username %></td>
        <td><img width=200 height=200 src="<%= diner.user.image %>"></td>
        <% if diner.party != nil %>
        <td><%= diner.party.name %></td>
        <% end %>
        <td>
          <a href="/diners/<%= diner.id %>" class="btn btn-primary">Show</a>
          <a href="/diners/<%= diner.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_diner/<%= diner.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
