<div class="page-header">
  <h1>
    Menu Items
    <a href="/menu_items/new" class="btn btn-lg btn-success">Add New Menu Item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% @menu_items.each do |menu_item| %>
      <tr>
        <td><img width=200 height=200 src="<%= menu_item.image %>"></td>
        <td><%= menu_item.name %></td>
        <td><%=number_to_currency( menu_item.price) %></td>
        <td>
          <a href="/menu_items/<%= menu_item.id %>" class="btn btn-primary">Show</a>
          <a href="/menu_items/<%= menu_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_menu_item/<%= menu_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
