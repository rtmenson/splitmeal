<!-- Validation failure messages -->
<% if @share.errors.any? %>
  <% @share.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Share #<%= @share.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_share/<%= @share.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for order_id -->
      <div class="form-group">
        <label for="order_id" class="control-label">
          Order
        </label>

        <input type="text" id="order_id" name="order_id" placeholder="Order" class="form-control" value="<%= @share.order_id %>">
      </div>

      <!-- Label and input for proportion -->
      <div class="form-group">
        <label for="proportion" class="control-label">
          Proportion
        </label>

        <input type="text" id="proportion" name="proportion" placeholder="Proportion" class="form-control" value="<%= @share.proportion %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @share.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Share
      </button>
      or
      <a href="/shares/<%= @share.id %>">Cancel</a>
    </form>
  </div>
</div>
